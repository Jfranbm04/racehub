{% extends 'base.html.twig' %}

{% block title %}Eventos - Panel de Administración{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary: #003d5c;
            --secondary: #007f80;
            --accent: #ff6b6b;
            --light: #f8f9fa;
            --dark: #1b2631;
        }

        .admin-container {
            display: grid;
            grid-template-areas: 
                "header"
                "main";
            grid-template-rows: auto 1fr;
            min-height: 100vh;
            padding: 20px;
            gap: 20px;
        }

        header {
            grid-area: header;
            background: var(--light);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        main {
            grid-area: main;
            background: var(--light);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .event-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .event-table th,
        .event-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .event-table th {
            background: var(--secondary);
            color: white;
            font-weight: bold;
        }

        .event-table tr:hover {
            background-color: #f1f1f1;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent), #c0392b);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(231, 76, 60, 0.3);
        }

        .action-buttons a {
            color: var(--primary);
            margin: 0 5px;
            text-decoration: none;
            font-weight: 600;
        }

        .action-buttons a:hover {
            color: var(--accent);
        }

        .status-badge {
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .no-records {
            text-align: center;
            font-size: 1.1rem;
            color: var(--accent);
            padding: 20px;
        }

        .image-thumbnail {
            max-width: 80px;
            height: auto;
            border-radius: 4px;
        }
        .status-select {
            padding: 5px;
            border-radius: 4px;
            border: 1px solid var(--secondary);
            margin-right: 5px;
        }

        .btn-status {
            background: var(--secondary);
            border: none;
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .btn-status:hover {
            background: var(--primary);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-container">
        <header>
            <h1 class="admin-title"><i class="fas fa-calendar-alt"></i> Eventos de Running</h1>
            <a href="{{ path('app_running_start') }}" class="btn-primary">
                <i class="fas fa-plus"></i> Nuevo Evento
            </a>
        </header>

        <main>
            <table class="event-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Fecha</th>
                        <th>Ubicación</th>
                        <th>Distancia</th>
                        <th>Cuota</th>
                        <th>Plazas</th>
                        <th>Estado</th>
                        <th>Categoría</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% if runnings|length > 0 %}
                        {% for event in runnings %}
                            <tr>
                                <td>{{ event.id }}</td>
                                <td>{{ event.name }}</td>
                                <td>{{ event.date|date('d/m/Y H:i') }}</td>
                                <td>{{ event.location }}</td>
                                <td>{{ event.distanceKm }} km</td>
                                <td>{{ event.entryFee ? event.entryFee ~ '€'  : 'Gratis' }}</td>
                                <td>{{ event.availableSlots }}</td>
                                <td>
                                    <span class="status-badge" style="background-color: 
                                        {% if event.status == 'open' %}#2ecc71;
                                        {% elseif event.status == 'closed' %}#f1c40f;
                                        {% elseif event.status == 'completed' %}#e74c3c;
                                        {% else %}#95a5a6;
                                        {% endif %}">
                                        {{ event.status|capitalize }}
                                    </span>
                                </td>
                                <td>{{ event.category ?: 'N/A' }}</td>
                                <td>
                                    {% if event.image %}
                                        <img src="{{ asset('uploads/' ~ event.image) }}" 
                                             alt="{{ event.name }}" 
                                             class="image-thumbnail">
                                    {% else %}
                                        <span>Sin imagen</span>
                                    {% endif %}
                                </td>
                                <td class="action-buttons">
                                    <a href="{{ path('app_running_show', {'id': event.id}) }}">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                    <a href="{{ path('app_running_edit', {'id': event.id}) }}">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <form action="{{ path('app_running_status', {'id': event.id}) }}" method="POST" style="display: inline;">
                                        <select name="status" class="status-select">
                                            <option value="open" {% if event.status == 'open' %}selected{% endif %}>Open</option>
                                            <option value="closed" {% if event.status == 'closed' %}selected{% endif %}>Closed</option>
                                            <option value="completed" {% if event.status == 'completed' %}selected{% endif %}>Completed</option>
                                        </select>
                                        <button type="submit" class="btn-status">
                                            <i class="fas fa-save"></i> Update Status
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="11" class="no-records">No hay eventos registrados</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </main>
    </div>
{% endblock %}