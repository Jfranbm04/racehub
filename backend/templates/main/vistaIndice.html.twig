{% extends 'base.html.twig' %}

{% block title %}Mi Perfil - RaceHub{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <style>
            :root {
                --primary: #2c3e50;
                --secondary: #3498db;
                --accent: #e74c3c;
                --light: #ecf0f1;
                --dark: #1b2631;
                --text-color: #333333;
            }

            body {
                margin: 0;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background: linear-gradient(135deg, var(--primary), var(--dark));
                color: var(--text-color);
            }

            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;
            }

            header {
                background: var(--light);
                padding: 20px;
                border-radius: 10px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            header h1 {
                margin: 0;
                font-size: 24px;
                color: var(--primary);
            }

            .back-button {
                background: var(--secondary);
                border: none;
                color: white;
                padding: 10px 20px;
                border-radius: 8px;
                font-weight: 600;
                cursor: pointer;
                transition: transform 0.2s ease;
                box-shadow: 0 4px 10px rgba(52, 152, 219, 0.3);
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 5px;
            }

            .back-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(52, 152, 219, 0.4);
            }

            .profile-section, .events-section {
                background: var(--light);
                border-radius: 12px;
                padding: 20px;
                margin-top: 20px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

            .profile-section h2, .events-section h2 {
                margin-bottom: 20px;
                color: var(--primary);
            }

            .profile-info {
                display: flex;
                align-items: center;
                gap: 30px;
            }

            .profile-info img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .profile-info .description {
                max-width: 600px;
            }

            .profile-info .description p {
                font-size: 16px;
                line-height: 1.5;
            }

            .event-item {
                background: var(--primary);
                color: white;
                border-radius: 8px;
                padding: 15px;
                margin-bottom: 10px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .event-item a {
                color: white;
                font-weight: bold;
                text-decoration: none;
            }

            .event-actions {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

            .event-actions a {
                background: var(--secondary);
                color: white;
                padding: 12px 25px;
                border-radius: 8px;
                font-weight: 600;
                cursor: pointer;
                transition: transform 0.2s ease;
                box-shadow: 0 4px 10px rgba(52, 152, 219, 0.3);
                text-decoration: none;
                text-align: center;
            }

            .event-actions a:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(52, 152, 219, 0.4);
            }
            .event-actions button {
                background: var(--secondary);
                border: none;
                color: white;
                padding: 12px 25px;
                border-radius: 8px;
                font-weight: 600;
                cursor: pointer;
                transition: transform 0.2s ease;
                box-shadow: 0 4px 10px rgba(52, 152, 219, 0.3);
            }

            .event-actions button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(52, 152, 219, 0.4);
            }

            footer {
                background: var(--light);
                text-align: center;
                padding: 10px;
                border-radius: 12px;
                margin-top: 20px;
                color: var(--primary);
            }
            .btn-back {
                background: var(--secondary);
                color: white;
                padding: 10px 20px;
                border-radius: 8px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                transition: all 0.3s ease;
            }

            .btn-back:hover {
                background: var(--primary);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }
            @media (max-width: 768px) {
                .profile-info {
                    flex-direction: column;
                    align-items: flex-start;
                    text-align: center;
                }

                .profile-info img {
                    margin-bottom: 15px;
                }

                .profile-info .description {
                    max-width: 100%;
                }
            }
        </style>
        {% endblock %}
{% block body %}
    <div class="container">
        <header>
            <h1>Bienvenido, {{ app.user.name }}</h1>
            <a href="{{ path('app_logout') }}" class="btn-back">
                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
            </a>
        </header>

        <!-- Profile Section -->
        <section class="profile-section">
            <h2>Mi Perfil</h2>
            <div class="profile-info">
                <img src="{{ app.user.image ?? 'https://via.placeholder.com/150' }}" alt="Foto de Perfil">
                <div class="description">
                    <p><strong>Nombre:</strong> {{ app.user.name }}</p>
                    <p><strong>Email:</strong> {{ app.user.email }}</p>
                    <p><strong>Género:</strong> {{ app.user.gender ?? 'No especificado' }}</p>
                    {% if 'ROLE_ADMIN' in app.user.roles %}
                        <a href="{{ path('app_admin') }}" class="btn-back" style="margin-top: 15px;">
                            <i class="fas fa-user-shield"></i> Panel de Administración
                        </a>
                    {% endif %}
                </div>
            </div>
        </section>

        <section class="events-section">
            <h2>Deportes Disponibles</h2>
            <div class="event-item" style="background: linear-gradient(135deg, #587AD7, #2C3030);">
                <span><i class="fas fa-running"></i>Running</span>
                <div class="event-actions">
                    <a href="https://runnify-web.web.app/" style="background: #587AD7;"><i class="fas fa-globe"></i> Inscribirse (Web)</a>
                    <a href="" style="background: #587AD7;"><i class="fas fa-mobile-alt"></i> Inscribirse (Móvil)</a>
                    <a href="" style="background: #587AD7;"><i class="fas fa-desktop"></i> Inscribirse (Escritorio)</a>
                </div>
            </div>
            <div class="event-item" style="background: linear-gradient(135deg, #001f3d, #00ffaa);">
                <span><i class="fas fa-bicycle"></i> Cycling</span>
                <div class="event-actions">
                    <a href="" style="background: #001f3d;"><i class="fas fa-globe"></i> Inscribirse (Web)</a>
                    <a href="" style="background: #001f3d;"><i class="fas fa-mobile-alt"></i> Inscribirse (Móvil)</a>
                    <a href="" style="background: #001f3d;"><i class="fas fa-desktop"></i> Inscribirse (Escritorio)</a>
                </div>
            </div>
            <div class="event-item" style="background: linear-gradient(135deg, #8EB486, #F8E4BE);">
                <span><i class="fas fa-mountain"></i> Trailrunning</span>
                <div class="event-actions">
                    <a href="https://github.com/Fer-r/trailrunning/releases" style="background: #8EB486;"><i class="fas fa-globe"></i> Inscribirse (Web)</a>
                    <a href="https://github.com/Fer-r/trailrunning/releases" style="background: #8EB486;"><i class="fas fa-mobile-alt"></i> Inscribirse (Móvil)</a>
                    <a href="https://github.com/Fer-r/trailrunning/releases" style="background: #8EB486;"><i class="fas fa-desktop"></i> Inscribirse (Escritorio)</a>
                </div>
            </div>
        </section>
        <footer>
            <p>&copy; 2025 RaceHub - Todos los derechos reservados</p>
        </footer>
    </div>
</body>
{% endblock %}
