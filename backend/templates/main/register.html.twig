{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, sans-serif;
        flex-direction: column; /* Asegura que los elementos se apilen verticalmente */
    }

    #txtInicio {
        text-align: center;
        font-size: 30px;
        margin-bottom: 1em;
    }

    #btnRegistrar, #btnAtras {
        font-size: 18px;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 40%;
    }
    
    #btnAtras {
        top: 0;
        left: 0;
        width: 50px;
        height: 50px;
        margin: 1rem;

        position:absolute;
        display: block;
        font-weight: bold;
    }



    .recuadro {
        padding: 20px;
        border: 1px solid black;
        border-radius: 5px;
        text-align: center;
        margin: 1em auto;
        max-width: 400px;
        font: 18px/1.5 sans-serif;
        background-color: #f2f2f2;
    }

    .form-group {
        margin-bottom: 10px;
        text-align: left;
    }

    .form-group label {
        display: block;
        margin-bottom: 2px;
    }

    .form-group input {
        width: 100%;
        padding: 5px;
        box-sizing: border-box;
    }

    .form-group a {
        display: inline-block;
        margin-top: 5px;
    }
</style>

<div>
    <button id="btnAtras">&lt;</button>
</div>

<script>
    document.querySelector("#btnAtras").addEventListener("click", () => {
        location.href = location.origin
    })
</script>

<h1 id="txtInicio">Registro</h1>



<div class="recuadro">
    <form action="{{ path('app_register_submit') }}" method="POST">
    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" id="nombre" required>
    </div>
    <div class="form-group">
        <label for="email">Correo:</label>
        <input type="email" name="email" id="email" required>
    </div>
    <div class="form-group">
        <label for="password">Contraseña:</label>
        <input type="password" name="password" id="password" required>
    </div>
    <div class="form-group">
        <label for="password_confirm">Confirmar contraseña:</label>
        <input type="password" name="password_confirm" id="password_confirm" required>
    </div>
    <div class="form-group">
        <a href="{{ path('app_login') }}">Ya tengo una cuenta. Iniciar sesión</a>
    </div>
    
    <input type="submit" value="Registrar" id="btnRegistrar">
    </form>
</div>
{% endblock %}
